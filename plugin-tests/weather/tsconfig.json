{
  "compilerOptions": {
    "target": "ES2017",  
    "module": "commonjs",  
    "declaration": true,  
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,  
    "moduleResolution": "node",  
    "esModuleInterop": true,  
    "resolveJsonModule": true,  
    "sourceMap": false,  
    "experimentalDecorators": true,  
    "emitDecoratorMetadata": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}